<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingInfo"
            android:text="@string/aboutNashville"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textAboutInfo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/interest"
            android:padding="@dimen/paddingCityInfo"
            android:text="@string/infoGeography"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSizeCityInfo" />

    </RelativeLayout>

</ScrollView>