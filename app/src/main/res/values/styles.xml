<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorIndigo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Image of Location -->
    <style name="imageLocation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightImageLocation</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- CardView TextView -->
    <!-- Location name at top of cardView -->
    <style name="titleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titleHeight</item>
        <item name="android:background">#FF9FA8DA</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">@dimen/padding16dp</item>
        <item name="android:paddingRight">@dimen/padding6dp</item>
        <item name="android:paddingTop">@dimen/padding6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <!-- CardView info TextView -->
    <!-- Location, Hours and Price -->
    <style name="contactsTextStyle" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">@dimen/width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:paddingRight">@dimen/padding6dp</item>
        <item name="android:textSize">@dimen/contactTextSize</item>
    </style>

    <!-- Price info on cardView -->
    <style name="contactsTextStyle.price">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Location, Hours, Price on DETAILS page-->
    <style name="contactsTextStyle.detail">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0</item>
    </style>

</resources>
